{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "es6",
		"strict": true,
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"rootDir": ".",
		"jsx": "react-jsx",
		"declaration": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true
	},
	"include": [
		"./**/*.tsx",
		"./**/*.ts"
	]
}
