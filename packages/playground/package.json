{
  "name": "xhyper-playground",
  "version": "0.0.17",
  "description": "hyper playground",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nodemon -w ../hyper/dist --exec 'yarn hyper:dev'",
    "hyper:dev": "hyper dev",
    "build": "nodemon -w ../hyper/dist --exec 'yarn hyper:build'",
    "hyper:build": "hyper build",
    "preview": "hyper preview",
    "cloudflare:dev": "wrangler pages dev ./.hyper --compatibility-date=2023-09-22",
    "cloudflare:deploy": "wrangler pages deploy ./.hyper",
    "db:gen:migrate": "drizzle-kit generate:pg",
    "db:migrate": "tsx ./drizzle/migrate.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@types/ws": "^8.5.10",
    "autoprefixer": "^10.4.15",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.6",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "wrangler": "^3.10.1",
    "xhyper": "^0.0.17"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.6.0",
    "drizzle-orm": "^0.29.1",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xhyper-plugin-auth": "^0.0.17",
    "xhyper-plugin-custom-plugin": "^0.0.17"
  }
}
