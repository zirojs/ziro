{
  "name": "ziro-playground",
  "version": "0.0.22",
  "description": "ziro playground",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nodemon -w ../ziro/dist --exec 'yarn ziro:dev'",
    "ziro:dev": "ziro dev",
    "build": "nodemon -w ../ziro/dist --exec 'yarn ziro:build'",
    "ziro:build": "ziro build",
    "preview": "ziro preview",
    "cloudflare:dev": "wrangler pages dev ./.ziro --compatibility-date=2023-09-22",
    "cloudflare:deploy": "wrangler pages deploy ./.ziro",
    "db:gen:migrate": "drizzle-kit generate:pg",
    "db:migrate": "tsx ./drizzle/migrate.ts"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.15",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.6",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "wrangler": "^3.10.1",
    "ziro": "^0.0.22"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.6.0",
    "drizzle-orm": "^0.29.1",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ziro-plugin-auth": "^0.0.22",
    "ziro-plugin-custom-plugin": "^0.0.22"
  }
}
